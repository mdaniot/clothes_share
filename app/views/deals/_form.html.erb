<%= simple_form_for [@item, @deal], data: { controller: 'flatpickr' } do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :start_date, as: :string, input_html: { data: { flatpickr_target: "startDate" } }%>
      <%= f.input :finish_date, as: :string, input_html: { data: { flatpickr_target: "finishDate" } } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
<% end %>
