	<div class="container mt-5">
		<div class="card p-5">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						<div class="preview-pic tab-content">
						  <div class="tab-pane active" id="pic-1"><%= cl_image_tag @item.photo.key, style:"width: 100%" if @item.photo.attached? %></div>
						</div>
					</div>
					<div class="details col-md-6">
						<h3 class="product-title"><%= @item.title %></h3>
						<p class="product-description"><%= @item.description %></p>
						<h4 class="price"><span><strong>R$ </strong><%= @item.price %></span></h4>
						<h5 class="sizes"><strong>Tamanho : </strong><%= @item.size %></h5>
						<h5 class="colors"><strong>Cor: </strong><%= @item.color.capitalize %></h5>
            					<h5 class="brands"><strong>Marca: </strong><%= @item.brand %></h5>
						<div class="action">
						  <%= @item.availability ? (link_to 'Escolher data', new_item_deal_path(@item), class:"add-to-cart btn card-button-show") : (render 'mensagem_alugado') %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

<%= render 'shared/footer' %>
