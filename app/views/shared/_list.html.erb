<div class="container-sm">
<div class=" d-flex align-items-center p-3" >
  <div class="cards container gap-4">
    <% @items.each do |item|%>
      <div class="card-product">
        <%= cl_image_tag item.photo.key, :width => 200, :height => 300, :crop => "fit" if item.photo.attached? %>
        <div class="card-product-infos">
          <h5 class="card-title"><%= item.title %></h5>
          <p class="card-text">R$ <%= item.price %></p>
          <a href="/items/<%=item.id%>" class="btn btn-dark rounded-pill">Me alugue!</a>
        </div>
      </div>
          <% end %>
    </div>
  </div>
</div>
